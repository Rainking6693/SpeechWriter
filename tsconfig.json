{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@speechwriter/ui": ["packages/ui/src"],
      "@speechwriter/ui/*": ["packages/ui/src/*"],
      "@speechwriter/config": ["packages/config/dist", "packages/config/src"],
      "@speechwriter/config/*": ["packages/config/dist/*", "packages/config/src/*"],
      "@speechwriter/database": ["packages/database/dist", "packages/database/src"],
      "@speechwriter/database/*": ["packages/database/dist/*", "packages/database/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next"
  ],
  "references": [
    { "path": "./packages/config" },
    { "path": "./packages/database" },
    { "path": "./packages/ui" },
    { "path": "./apps/api" },
    { "path": "./apps/web" }
  ]
}