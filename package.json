{
  "name": "speechwriter",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered speech writing platform",
  "author": "SpeechWriter Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=8.15.0"
  },
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev": "pnpm --filter @speechwriter/web dev",
    "build": "pnpm --filter @speechwriter/config build && pnpm --filter @speechwriter/database build && pnpm --filter @speechwriter/api build && pnpm --filter @speechwriter/web build",
    "start": "pnpm --filter @speechwriter/web start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "pnpm --recursive exec rm -rf dist .next node_modules/.cache",
    "test": "pnpm --recursive test",
    "test:watch": "pnpm --recursive test:watch",
    "deploy": "netlify deploy --prod",
    "deploy:preview": "netlify deploy",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx packages/database/src/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:setup": "tsx packages/database/src/setup.ts",
    "db:seed": "tsx packages/database/src/seed.ts",
    "db:reset": "tsx packages/database/src/reset.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "docx": "9.5.1",
    "dotenv-cli": "10.0.0",
    "eslint": "8.57.1",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "9.1.7",
    "lint-staged": "16.1.6",
    "netlify-cli": "^17.15.0",
    "prettier": "3.6.2",
    "puppeteer": "24.18.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "ai",
    "speech-writing",
    "typescript",
    "next.js",
    "netlify",
    "monorepo"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/pg": "8.15.5",
    "dotenv": "17.2.2",
    "drizzle-kit": "0.31.4",
    "drizzle-orm": "0.44.5",
    "postgres": "3.4.7",
    "tsx": "^4.20.5",
    "zod": "^3.25.76"
  }
}
