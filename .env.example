# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=SpeechWriter
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/speechwriter
# For development you can use Neon, Supabase, or local PostgreSQL
# Example Neon: postgresql://user:pass@ep-xxx.us-east-1.aws.neon.tech/dbname
# Example Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres

# AI Services Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# AI Rate limiting and quotas
AI_RATE_LIMIT_RPM=50
AI_RATE_LIMIT_TPM=100000
AI_MOCK_MODE=false

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/speechwriter
# Alternative database providers
# NEON_DATABASE_URL=your_neon_database_url_here
# SUPABASE_DATABASE_URL=your_supabase_database_url_here
PGVECTOR_ENABLED=true

# Storage Configuration
# S3 Compatible Storage (AWS S3, Cloudflare R2)
STORAGE_PROVIDER=s3
S3_BUCKET_NAME=speechwriter-storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key
# For Cloudflare R2
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here
# Auth.js OAuth providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Magic link email configuration
EMAIL_FROM=noreply@speechwriter.app

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password
# Alternative email providers
# RESEND_API_KEY=your_resend_api_key
# SENDGRID_API_KEY=your_sendgrid_api_key

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# Stripe Product IDs
STRIPE_PRICE_ID_FREE=price_free_plan_id
STRIPE_PRICE_ID_PRO=price_pro_plan_id  
STRIPE_PRICE_ID_TEAM=price_team_plan_id

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
NEXT_PUBLIC_VERCEL_ANALYTICS=false
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
# Error tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_AUTH=false
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_VECTOR_SEARCH=false

# Security
CORS_ORIGINS=http://localhost:3000,https://aispeechwriter.netlify.app
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Caching
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development
MOCK_AI_RESPONSES=false
DISABLE_TELEMETRY=false
DEBUG_MODE=false